a:visited
	color inherit

body
	font-family $font_nunito
	background #f4f4f4

.profile
	&-description
		padding-mobile()
	&-container
		padding-mobile()	
	&-description
		display flex
		flex-wrap wrap
	&-excerpt
		font-family $font_montserrat
		line-height 1.5
		color $profile_parragraph
		order 2
		text-align center
	&-avatar
		order 1
		width 100%
		text-align center
		img
			width 70%		

.subtitle
	color $profile_subtitle
	font-weight 900
	text-align center
	text-transform uppercase
	font-size 0.85em !important
	padding 3em 0

.profile-portfolio
	background #fff

@media only screen and (min-width $screen-sm)
	.profile
		&-description
			margin-bottom 3em
		&-container
			display flex
			flex-wrap wrap
			justify-content space-around
		&-avatar
			order 2
			width 40%
			img
				width 100%
		&-excerpt
			order 1
			width 60%
			text-align left
			article p
				padding 0 5rem 0 0

@media only screen and (min-width $screen-lg)				
	.profile
		&-container
			max-width-lg()
			padding 0
			justify-content space-between
		&-excerpt
			article p
				font-size 1.5rem			