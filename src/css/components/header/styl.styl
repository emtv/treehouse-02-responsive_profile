.nav-container
	display none

.nav-mobile
	&-container
		list-style none
		padding 0
	&-item
		padding 0.85em
		margin 5px 0
		background #fff		
		a
			color #444
			font-weight 900
			text-decoration none
			text-transform uppercase
			font-size 0.85em			
	
.profile-header
	text-align center
	padding-mobile()

			
@media only screen and (min-width $screen-sm)
	.profile-header
		margin-bottom 3em
		
	.nav-mobile-container
		display none
	
	.nav-container
		list-style none
		padding 0
		display block
		.nav-item
			display inline-block
			a
				text-decoration none
				margin 0 10px
				font-size 1em
				text-transform uppercase
				font-weight 900
				
@media only screen and (min-width $screen-lg)
	.profile
		&-header
			max-width-lg()
			display flex
			justify-content space-between
			align-items center
			margin-bottom 1%
		&-description
			max-width-lg()
			